{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "esnext",
    "target": "es6",
    "lib": ["DOM", "ES6"],
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "composite": true,
    "strict": true,
    "jsx": "react",
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["test/*"]
    }
  }, 
  "include": [ "./src/**/*" ]
}
